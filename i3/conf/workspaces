# # # # # # # #
# = Layout =  #
# # # # # # # #



# Move windows with the mouse
floating_modifier Mod1

# orientation
default_orientation vertical

# workspace layout
workspace_layout default

# window title alignment
title_align center



# # # # # # # #
# = Borders = #
# # # # # # # #



set $borderWidth 2


# borders size
default_border none
default_floating_border pixel $borderWidth

hide_edge_borders smart



# # # # # # # #
# = Windows = #
# # # # # # # #



# popups make you leave fullscreen
popup_during_fullscreen leave_fullscreen

# avoid oposite window to be focused
focus_wrapping no

# same $ws key
workspace_auto_back_and_forth yes

# mark a windows to be focused with urgency
focus_on_window_activation urgent

# drag only using $mod
tiling_drag modifier

# mouse focus
focus_follows_mouse no



# # # # # # #
# = Gaps =  #
# # # # # # #


# window space
gaps inner 5

# sm
smart_gaps on


# # # # # # # # #
#  = Clients =  #
# # # # # # # # #


# note taking
assign [class="obsidian"] 1

# browser
assign [class="firefox" instance="Navigator"] 2

# vscode
assign [class="Code" instance="code"] 3
